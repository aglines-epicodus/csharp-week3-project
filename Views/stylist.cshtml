@{
  Layout="Shared/_Layout";
}

<div class="container">
  <h1>@Model["stylist"].GetName()</h1>
  <h3>Here are all the clients for this stylist:</h3>

  @if (@Model["clients"].Count == 0)
  {
    <p>No clients have been added yet!</p>
  }
  else
  {
    <ol>
      @foreach (var client in @Model["clients"])
      {
        <li>@client.GetName()</li>
      }
    </ol>
  }
  <p><a href="/stylist/edit/@Model["stylist"].GetId()">Edit this stylist!</a></p>
  <p><a href="/stylist/delete/@Model["stylist"].GetId()">Delete this stylist.</a></p>
  <p><a href="/clients/new">Add a new client</a></p>
  <p><a href="/">Return Home</a></p>
</div>
