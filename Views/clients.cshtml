@{
  Layout="Shared/_Layout";
}

<div class="container">
  @if (@Model.Count == 0)
  {
    <p>No clients currently added</p>
  }
  else
  {
    <h1>List of clients:</h1>
    <ul>
      @foreach (var client in Model)
      {
        <li><a href="/clients/@client.GetId()">@client.GetName()</li>
      }
    </ul>
    <form action="/clients/clear" method="post">
      <button type="submit">Clear all clients</button>
    </form>
  }
  <p><a href="/clients/new">Add a new client</a></p>
  <p><a href="/">Return home</a></p>
</div>
